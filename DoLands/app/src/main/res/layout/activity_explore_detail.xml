<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExploreDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/attract_name"
            android:textAllCaps="true"
            android:textSize="23dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:letterSpacing="0.07"/>
        //buat youtube
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/brown"
            android:minHeight="0dp"
            android:text="@string/btn_detail"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat"
            android:textSize="13dp"
            android:letterSpacing="0.1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
        <Button
            android:id="@+id/button_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:text="@string/btn_review"
            android:textAllCaps="false"
            android:textColor="@color/brown"
            android:fontFamily="@font/montserrat"
            android:textSize="13dp"
            android:letterSpacing="0.1" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="7dp"
        android:background="@drawable/gradient">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_location"
                    android:textSize="21dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:letterSpacing="0.07"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="@string/isi_detail_location"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand"
                android:letterSpacing="0.03"/>
            <fragment
                android:id="@+id/attract_map"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:name="com.google.android.gms.maps.SupportMapFragment" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_time"
                    android:textSize="21dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:letterSpacing="0.07"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_opentime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="@string/isi_detail_time"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand"
                android:letterSpacing="0.03"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_contact"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_contact"
                    android:textSize="21dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:letterSpacing="0.07"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="@string/isi_detail_contact"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand"
                android:letterSpacing="0.03"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/photo1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney1"/>
            <ImageView
                android:id="@+id/photo2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney2"/>
            <ImageView
                android:id="@+id/photo3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney3"/>
            <ImageView
                android:id="@+id/photo4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney1"/>
            <ImageView
                android:id="@+id/photo5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney2"/>
            <ImageView
                android:id="@+id/photo6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney3"/>
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>