<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExploreDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Disneyland"
            android:textAllCaps="true"
            android:textSize="23dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:letterSpacing="0.07"/>
        //buat youtube
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="Disneyland"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:minHeight="0dp"
                android:text="Detail"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat"
                android:textSize="13dp"
                android:letterSpacing="0.1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
            <Button
                android:id="@+id/button_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:text="Review"
                android:textAllCaps="false"
                android:textColor="@color/brown"
                android:fontFamily="@font/montserrat"
                android:textSize="13dp"
                android:letterSpacing="0.1" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_location"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="23dp"
                        android:textColor="@color/brown"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:letterSpacing="0.07"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Jl. Sunter Agung no. 85\nJakarta Utara"
                    android:textSize="18dp"
                    android:textColor="@color/brown"
                    android:fontFamily="@font/quicksand"
                    android:letterSpacing="0.03"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_time"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Hours"
                        android:textSize="23dp"
                        android:textColor="@color/brown"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:letterSpacing="0.07"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/text_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Senin - Jumat\n10.00 - 21.00 WIB\nSabtu - Minggu\n09.00 - 22.00 WIB"
                    android:textSize="18dp"
                    android:textColor="@color/brown"
                    android:fontFamily="@font/quicksand"
                    android:letterSpacing="0.03"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_contact"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="23dp"
                        android:textColor="@color/brown"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:letterSpacing="0.07"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/text_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="021-911\n021-911\nwww.website123.com"
                    android:textSize="18dp"
                    android:textColor="@color/brown"
                    android:fontFamily="@font/quicksand"
                    android:letterSpacing="0.03"/>
            </LinearLayout>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/photo1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney1"/>
            <ImageView
                android:id="@+id/photo2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney2"/>
            <ImageView
                android:id="@+id/photo3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney3"/>
            <ImageView
                android:id="@+id/photo4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney1"/>
            <ImageView
                android:id="@+id/photo5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney2"/>
            <ImageView
                android:id="@+id/photo6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="25dp"
                android:src="@drawable/disney3"/>
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>